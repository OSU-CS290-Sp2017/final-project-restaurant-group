{{! Creates modal for reservations}}
  
<button type="button" id="create-box-button"><i class="fa fa-bell-o"></i></button>

<div id = "modal-backdrop" class = "hidden"></div>
<div id = "create-modal" class = "hidden">
  <div class = "modal-dialog-box">
    <div class = "header">
      <h5>Please enter name, phone number, and time.</h5>
      <button type = "button" class = "close-button">&times;</button>
    </div>
    <div class = "modal-body">
      <div class = "modal-input">
        <label for = "name-input">Name</label>
        <textarea id = "name-input"></textarea>
      </div>
      <div class = "modal-input">
        <label for = "phone-num-input">Phone Number</label>
        <input type = "text" id = "phone-num-input">
      </div>
      <div class = "modal-input">
        <label for = "time-input">Time</label>
        <input type = "text" id = "time-input">
      </div>
      <div class = "modal-footer">
        <button type = "button" class = "cancel-button">Cancel</button>
        <button type = "button" class = "accept-button">Accept</button>
    </div>
  </div>
</div>